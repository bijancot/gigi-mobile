<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AchivmentActivity">
    <TextView
        android:id="@+id/txtAchivment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Selamat!"
        android:textSize="35sp"
        android:textColor="@color/purpleButton"
        android:fontFamily="@font/nunito_black"/>
    <ImageView
        android:id="@+id/ivAchivment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txtAchivment"
        android:layout_centerHorizontal="true"
        android:src="@drawable/achivment"/>
    <TextView
        android:id="@+id/txtAchivment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Lanjut kebiasaan sikat gigimu dengan baik dan benar untuk mendapatkan gigi bersih,sehat dan kuat."
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ivAchivment"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:fontFamily="@font/nunito_bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="-Drg. Poppy Hidayat-"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtAchivment1"
        android:textSize="18sp"
        android:textColor="@color/purpleButton"
        android:fontFamily="@font/nunito_bold"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="OK"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:textSize="20sp"/>
</RelativeLayout>