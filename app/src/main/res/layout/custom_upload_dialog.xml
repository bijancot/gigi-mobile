<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/txtUploadDialogMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah kamu sudah sarapan pagi atau belum?"
                android:textSize="18sp"
                android:textColor="@color/text"
                android:fontFamily="@font/nunito_bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtUploadDialogMessage">
                <Button
                    android:id="@+id/btnUploadDialogBelum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/custom_button"
                    app:backgroundTint="@null"
                    android:text="Belum"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/btnUploadDialogSudah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/custom_button"
                    app:backgroundTint="@null"
                    android:text="Sudah"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="18sp"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>