<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgLogoDialog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sunpop"
        android:translationZ="100dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="140dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/custom_border_dialog"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/txtUploadDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apakah kamu sudah sarapan pagi atau belum?"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:fontFamily="@font/nunito_bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtUploadDialogMessage">
            <Button
                android:id="@+id/btnUploadDialogBelum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/custom_button_false"
                app:backgroundTint="@null"
                android:text="Belum"
                android:textColor="@color/purpleButton"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btnUploadDialogSudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:text="Sudah"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>