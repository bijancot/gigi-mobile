<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/lightYellow"
    tools:context=".activities.UploadAfterActivity">

    <TextView
        android:id="@+id/txtUploadFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Upload Foto"
        android:textSize="30sp"
        android:textColor="@color/blueButton"
        android:fontFamily="@font/nunito_black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Upload foto sesudah kamu sikat gigi"
        android:layout_below="@+id/txtUploadFoto"
        android:textSize="15sp"
        android:textColor="@color/textPrimary"
        android:fontFamily="@font/nunito_bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imgUploadAfter"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="350dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightYellow"
            android:orientation="horizontal"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="70dp"
            android:src="@drawable/tedy_bear_purple"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grayTrans70"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_addphoto"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnUploadAfterDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Upload"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:textSize="20sp"/>
</RelativeLayout>